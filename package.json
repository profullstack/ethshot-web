    "@walletconnect/web3-provider": "^1.8.0",
    "@walletconnect/web3wallet": "^1.16.1",
    "buffer": "^6.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.10.0",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "process": "^0.11.10",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^4.6.12",
    "stream": "^0.0.3",
